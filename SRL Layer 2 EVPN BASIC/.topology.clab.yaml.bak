name: LAYER2EVPN 

topology:
  nodes:
    spine:
      kind: nokia_srlinux
      image: ghcr.io/nokia/srlinux
      startup-config: configs/spine.cfg
    leaf1:
      kind: nokia_srlinux
      image: ghcr.io/nokia/srlinux
      startup-config: configs/leaf1.cfg
    leaf2:
      kind: nokia_srlinux
      image: ghcr.io/nokia/srlinux
      startup-config: configs/leaf2.cfg
    n1:
      kind: linux
      image: alpine:latest
    n2:
      kind: linux
      image: alpine:latest
    n10:
      kind: linux
      image: alpine:latest
    n20:
      kind: linux
      image: alpine:latest
  links:
      - endpoints: ["spine:e1-1", "leaf1:e1-49"]
      - endpoints: ["spine:e1-2", "leaf2:e1-49"]
      - endpoints: ["leaf1:e1-1", "n1:eth1"]
      - endpoints: ["leaf2:e1-1", "n2:eth1"]
      - endpoints: ["leaf1:e1-2", "n10:eth1"]
      - endpoints: ["leaf2:e1-2", "n20:eth1"]
